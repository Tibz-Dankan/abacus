          <div class="row justify-content-center">
            <div class="col-lg-8">
              <div class="apply-wrapper">
                <!-- Form -->
                <div class="col">
                  <div class="col-lg-6">
                    <span><%= message %></span>
                  </div>
                </div>
                <div>
                  <form action="forgot-password" method="POST">
