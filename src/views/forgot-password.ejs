                        <div class="single-form">
                          <label>* EMAIL ADDRESS ($) </label>
                          <input
                            type="email"
                            name="email"
                            placeholder="Enter email Address"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-lg-6">
                        <button type="submit" class="btn apply-btn mt-30">
                          SUBMIT
                        </button>
                      </div>
                    </div>
                  </form>
                  <!-- End From -->
