    <main class="md:mt-32">
      <!-- SERVICES SECTION START -->
      <section class="m-8 sm:m-16 md:mt-32">
        <div class="text-center space-y-4 my-8">
          <p class="font-bold text-secondary text-lg">
            Services that we are providing
          </p>
          <h1 class="font-bold text-4xl text-greyDark4">
            High Performance Services For All Industries.
          </h1>
        </div>
        <div class="my-4 grid gap-4 mmd:grid-cols-2 lg:grid-cols-4">
          <div
            class="flex flex-col justify-center items-center bg-greyLight2 p-4 space-y-4 border-l-8 border-primary rounded shadow-md"
