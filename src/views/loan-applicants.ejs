              <div class="apply-wrapper">
                <!-- Form -->
                <div>
                  <span><%= message %></span>
                </div>
                <div>
                  <% loanApplicants.map((applicant)=>{ %>
                  <div>
                    <% if(applicant.is_read){ %>
                    <div>
                      <form action="/single-loan-application" method="get">
                        <button
                          name="loanId"
                          value="<%= applicant.loan_id%>"
                          type="submit"
                        >
                          <p>
                            <span><%= applicant.first_name %></span>
                            <span><%= applicant.last_name %></span> from
                            <span><%= applicant.city %></span> applied for a
                            loan
                          </p>
                        </button>
                      </form>
                    </div>
                    <%}else{ %>
                    <div style="font-weight: bold">
                      <form action="/single-loan-application" method="get">
                        <button
                          name="loanId"
                          value="<%= applicant.loan_id%>"
                          type="submit"
                        >
